@{
    ViewBag.Title = "Fruits Web Game";
}


<h2>Game Play</h2>
@if (!ViewBag.gameOver)
{
    <form action="/Home/FireTop" method="post">
        Top: <input type="range" name="position" min="0" max="100"/>
        <input type="submit" value="Fire Top"/>
    </form>

    <form action="/Home/FireBottom" method="post">
        Bottom: <input type="range" name="position" min="0" max="100"/>
        <input type="submit" value="Fire Bottom"/>
    </form>
}

<form action="/Home/Reset" method="post">
    <input type="submit" value="New Game"/>
</form>


@if (ViewBag.gameOver)
{
    <h2>Game Over!</h2>
    <img src="/images/explosion.png"/>
}
else
{
    <h2>Battle Field</h2>
    for (int row = 0; row < ViewBag.rowCount; row++)
     {
         for (int col = 0; col < ViewBag.colsCount; col++)
         {
             <img src="/images/@(ViewBag.fruits[row, col]).png"/>
         }
         <br/>
     }
    <h2>Score: <b>@ViewBag.score</b>
    </h2>
}